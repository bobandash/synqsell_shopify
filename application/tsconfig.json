{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "jest.integration.config.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@fixtures/*": ["prisma/fixtures/*"],
      "@factories/*": ["prisma/factories/*"]
    },
    "types": ["node", "jest", "@quramy/jest-prisma"]
  }
}
